<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
    <service name='site/maven' type='service' version='0'>
        <create_default_instance enabled='true'/>
        <single_instance/>
        <dependency name='network' grouping='require_all' restart_on='refresh' type='service'>
            <service_fmri value='svc:/milestone/network:default'/>
        </dependency>
        <dependency name='filesystem' grouping='require_all' restart_on='refresh' type='service'>
            <service_fmri value='svc:/system/filesystem/local'/>
        </dependency>
        <method_context working_directory='/opt/jenkins'>
            <method_credential group='daemon' privileges='basic,net_privaddr' user='jenkins'/>
            <method_environment>
                <envvar name='PATH' value='/opt/java/bin:/opt/local/bin:/usr/local/bin:/usr/bin:/usr/sbin:/bin'/>
                <envvar name='HOME' value='/opt/tiny-maven-proxy'/>
                <envvar name='PWD' value='/opt/tiny-maven-proxy'/>
                <envvar name='TZ' value='Americas/New_York'/>
                <envvar name='JAVA_HOME' value='/opt/java8'/>
            </method_environment>
        </method_context>
        <exec_method name='start' type='method'
                     exec='/opt/java8/bin/java -Djava.awt.headless=true -XX:+UseG1GC -Xmx64M -Xms16M -jar /opt/tiny-maven-proxy/tiny-maven-proxy.jar --basepath maven --log.console false --log.async false --log.level trace --log.buffer 2048 --log.file /opt/tiny-maven-proxy/maven.log --maven.dir /opt/tiny-maven-proxy/repository --mirror &quot;http://localhost:8080/builds/plugin/repository/everything&quot;'
                     timeout_seconds='20'/>
        <exec_method name='stop' type='method' exec=':kill' timeout_seconds='60'/>
        <property_group name='application' type='application'/>
        <property_group name='startd' type='framework'>
            <propval name='duration' type='astring' value='child'/>
            <propval name='ignore_error' type='astring' value='core,signal'/>
        </property_group>
        <stability value='Evolving'/>
        <template>
            <common_name>
                <loctext xml:lang='C'>Tiny Maven Proxy</loctext>
            </common_name>
        </template>
    </service>
</service_bundle>

